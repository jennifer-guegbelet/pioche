{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    <form class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
            {{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Email',
                    'required': 'required'
                }
            }) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="mb-3">
            <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">Mot de passe</label>
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Mot de passe',
                    'required': 'required'
                }
            }) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <hr>

        <div class="mb-3">
            <label for="{{ registrationForm.nom.vars.id }}" class="form-label">Nom</label>
            {{ form_widget(registrationForm.nom, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Nom',
                    'required': 'required'
                }
            }) }}
            {{ form_errors(registrationForm.nom) }}
        </div>
        <div class="mb-3">
            <label for="{{ registrationForm.prenom.vars.id }}" class="form-label">Prénom</label>
            {{ form_widget(registrationForm.prenom, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Prénom',
                    'required': 'required'
                }
            }) }}
            {{ form_errors(registrationForm.prenom) }}
        </div>
        <div class="mb-3">
            <label for="{{ registrationForm.adresse.vars.id }}" class="form-label">Adresse</label>
            {{ form_widget(registrationForm.adresse, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Adresse',
                    'required': 'required'
                }
            }) }}
            {{ form_errors(registrationForm.adresse) }}
        </div>

        <hr>

        <div class="form-check mb-3">
            {{ form_widget(registrationForm.agreeTerms, {
                'attr': {
                    'class': 'form-check-input',
                    'required': 'required'
                }
            }) }}
            <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                J'accepte les termes et conditions
            </label>
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn btn-primary">S'inscrire</button>
          <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
    </form>
{% endblock %}
